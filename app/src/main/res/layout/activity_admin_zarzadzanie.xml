<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.piotrskorupa.restauranthelper.Admin_zarzadzanie">

    <LinearLayout
        android:layout_width="368dp"
        android:layout_height="495dp"
        android:layout_marginLeft="8dp"
        android:orientation="vertical"
        android:weightSum="1"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:layout_editor_absoluteY="8dp">

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.13"
            android:gravity="center"
            android:text="Restaurant Manager"
            android:textColor="@android:color/holo_green_dark"
            android:textSize="20dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.13"
            android:text="Login:"
            android:textColor="@android:color/holo_green_dark"
            android:textSize="12dp" />
        <EditText
            android:id="@+id/login_worker"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.06"
            android:ems="10"
            android:inputType="textPersonName"
            android:textColor="@android:color/holo_green_dark" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.13"
            android:text="Password:"
            android:textColor="@android:color/holo_green_dark"
            android:textSize="12dp" />

        <EditText
            android:id="@+id/pass_worker"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.04"
            android:ems="10"
            android:inputType="textPassword"
            android:textColor="@android:color/holo_green_dark" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.13"
            android:text="Your Function (check only 1 box)"
            android:textColor="@android:color/holo_green_dark"
            android:textSize="12dp" />

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="97dp" >


            <RadioButton
                android:id="@+id/kelner_add"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Waiter" />

            <RadioButton
                android:id="@+id/kucharz_add"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Cook" />
        </RadioGroup>

        <Button
            android:id="@+id/button_add_worker"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.13"
            android:text="Add worker" />

        <Button
            android:id="@+id/button_show_workers"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.13"
            android:text="Show Your Workers" />

        <Button
            android:id="@+id/button_delete_restaurant"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.13"
            android:text="Delete Your Restaurant" />


    </LinearLayout>

</android.support.constraint.ConstraintLayout>
