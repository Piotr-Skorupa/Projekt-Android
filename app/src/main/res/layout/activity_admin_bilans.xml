<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.piotrskorupa.restauranthelper.AdminBilans">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="RESTAURANT BILANS"
        android:textSize="20dp"
        android:gravity="center"
        android:textColor="@android:color/holo_green_dark"
        />



    <ListView
        android:id="@+id/list_bilans"
        android:layout_width="match_parent"
        android:layout_height="350dp"

        />

    <Button
        android:id="@+id/refresh_button_bilans"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="REFRESH"
        />
    <TextView
        android:id="@+id/date_bilans"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DATE OF ADDITION:"
        />



</LinearLayout>
