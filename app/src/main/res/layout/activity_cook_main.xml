<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    tools:context="com.example.piotrskorupa.restauranthelper.CookMain">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="CURRENT ORDER LIST"
        android:textSize="20dp"
        android:gravity="center"
        android:textColor="@android:color/holo_green_dark"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ID:  "
    />


    <ListView
        android:id="@+id/list_order_cook"
        android:layout_width="match_parent"
        android:layout_height="300dp"

        />

    <Button
        android:id="@+id/refresh_button2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="REFRESH"
        />
    <TextView
        android:id="@+id/waiter_name2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="WAITER:"
        />
    <TextView
        android:id="@+id/dish_name4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DISHES:"
        />

    <TextView
        android:id="@+id/info_name2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="INFO:"
        />

</LinearLayout>
