<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.example.piotrskorupa.restauranthelper.MainActivity"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">
    <!--android:background="@android:color/background_dark" -->

    <LinearLayout
        android:layout_width="368dp"
        android:layout_height="495dp"
        android:layout_marginLeft="8dp"
        android:orientation="vertical"
        android:weightSum="1"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:layout_editor_absoluteY="8dp">

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.13"
            android:gravity="center"
            android:text="PLEASE SIGN IN OR SIGN UP"
            android:textColor="@android:color/holo_green_dark"
            android:textSize="20dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.13"
            android:text="Login:"
            android:textColor="@android:color/holo_green_dark"
            android:textSize="12dp" />
        <EditText
            android:id="@+id/login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.06"
            android:ems="10"
            android:inputType="textPersonName"
            android:textColor="@android:color/holo_green_dark" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.13"
            android:text="Password:"
            android:textColor="@android:color/holo_green_dark"
            android:textSize="12dp" />

        <EditText
            android:id="@+id/pass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.04"
            android:ems="10"
            android:inputType="textPassword"
            android:textColor="@android:color/holo_green_dark" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.13"
            android:text="Restaurant Name:"
            android:textColor="@android:color/holo_green_dark"
            android:textSize="12dp" />

        <EditText
            android:id="@+id/restaurant"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.07"
            android:ems="10"
            android:inputType="textPersonName"
            android:textColor="@android:color/holo_green_dark" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.13"
            android:text="Your Function (check only 1 box)"
            android:textColor="@android:color/holo_green_dark"
            android:textSize="12dp" />

        <CheckBox
            android:id="@+id/admin"
            android:layout_width="154dp"
            android:layout_height="wrap_content"
            android:text="Admin" />

        <CheckBox
            android:id="@+id/kelner"
            android:layout_width="152dp"
            android:layout_height="wrap_content"
            android:text="Waiter" />

        <CheckBox
            android:id="@+id/kucharz"
            android:layout_width="152dp"
            android:layout_height="wrap_content"
            android:text="Cook" />

        <Button
            android:id="@+id/loguj"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.13"
            android:text="sign in" />

        <Button
            android:id="@+id/rejestruj"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.13"
            android:text="sign up" />

    </LinearLayout>

</android.support.constraint.ConstraintLayout>
